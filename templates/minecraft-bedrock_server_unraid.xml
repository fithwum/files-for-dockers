<?xml version="1.0"?>
<Container version="2">
  <Name>Minecraft-bedrock</Name>
  <Repository>fithwum/minecraft-bedrock</Repository>
  <Registry>https://hub.docker.com/r/fithwum/minecraft-bedrock/</Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support></Support>
  <Project>https://www.minecraft.net/en-us/</Project>
  <Overview>This docker is for running Minecraft bedrock server.</Overview>
  <Category>GameServers:</Category>
  <WebUI/>
  <TemplateURL>https://github.com/fithwum/files-for-dockers/templates/minecraft-bedrock_server_unraid.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/fithwum/files-for-dockers/master/icons/minecraft-bedrock.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText>Buy me a coffee if you like.</DonateText>
  <DonateLink>https://checkout.square.site/pay/340d93c602a042b8a223a2f7c184a6a2</DonateLink>
  <Description>This docker is for running Minecraft bedrock server.</Description>
  <Beta>False</Beta>
  <Date>2020-07-15</Date>
  <Changes>[font size=4][center]minecraft-bedrock[/center][/font]
[font size=3][b](2020-07-15)[/b][/font]
&#x00a0;&#x00a0;- First Test.
  </Changes>
  <Networking>
    <Mode>host</Mode>
    <Publish>
      <Port>
        <HostPort>19132</HostPort>
        <ContainerPort>19132</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>19132</HostPort>
        <ContainerPort>19132</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/Game_Saves/Minecraft/bedrock/world/</HostDir>
      <ContainerDir>/MCserver/Bedrock level/</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/minecraft-bedrock-server</HostDir>
      <ContainerDir>/MCserver</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>99</Value>
      <Name>PUID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>PGID</Name>
      <Mode/>
    </Variable>
	<Variable>
      <Value>false</Value>
      <Name>ACCEPT_EULA</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Host Port 1" Target="19132" Default="19132" Mode="udp" Description="Container Port: 19132" Type="Port" Display="always" Required="true" Mask="false">19132</Config>
  <Config Name="Host Port 2" Target="19132" Default="19132" Mode="tcp" Description="Container Port: 19132" Type="Port" Display="always" Required="true" Mask="false">19132</Config>
  <Config Name="Accept EULA" Target="ACCEPT_EULA" Default="false" Mode="" Description="Head over to: https://account.mojang.com/documents/minecraft_eula to read the EULA. (If you accept the EULA change the value to 'true' without quotes)." Type="Variable" Display="always" Required="true" Mask="false">true</Config>
  <Config Name="Save Data" Target="/MCserver/Bedrock level/" Default="" Mode="rw" Description="Container Path: /MCserver/Bedrock level/" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/Game_Saves/Minecraft/bedrock/world/</Config>
  <Config Name="AppData Config Path" Target="/MCserver" Default="/mnt/user/appdata/minecraft-bedrock-server" Mode="rw" Description="Container Path: /MCserver" Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/user/appdata/minecraft-bedrock-server</Config>
  <Config Name="Key 2" Target="PUID" Default="99" Mode="" Description="Container Variable: PUID" Type="Variable" Display="advanced-hide" Required="false" Mask="false">99</Config>
  <Config Name="Key 3" Target="PGID" Default="100" Mode="" Description="Container Variable: PGID" Type="Variable" Display="advanced-hide" Required="false" Mask="false">100</Config>
</Container>
